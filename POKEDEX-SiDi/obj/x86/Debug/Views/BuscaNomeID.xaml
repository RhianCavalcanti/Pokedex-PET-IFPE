<Page
    x:Class="POKEDEX_SiDi.Views.BuscaNomeID"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:POKEDEX_SiDi.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style TargetType="ProgressBar" x:Key="MyProgressBar">
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Background" Value="BlanchedAlmond"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="MyTextBlocks">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Page.Resources>

    <Frame>
        <Grid x:ConnectionId='2' x:Name="Pokelist" Background="#FF73DE73">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="300"/>
                <ColumnDefinition Width="2*" MinWidth="400"/>
                <!--<ColumnDefinition Width="2*" MinWidth="200"/>-->
            </Grid.ColumnDefinitions>
            <RelativePanel Grid.ColumnSpan="3">

                <ListView x:ConnectionId='25' x:Name="ListaPokemonsD" 
                              SelectionMode="Single" 
                          SelectedIndex="0"
                              ItemsSource=""
                              IsItemClickEnabled="True"
                              ScrollViewer.HorizontalScrollMode="Enabled"
                              ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                              ScrollViewer.IsHorizontalRailEnabled="True"
                              ScrollViewer.VerticalScrollMode="Disabled"
                              Margin="0,10,0,10"
                              >
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" Height="200" Margin="40,0,0,0"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel x:Name="ItemList" Orientation="Vertical">
                                <RelativePanel>
                                    <Rectangle Fill="DarkGray" Height="160" Width="160"/>
                                </RelativePanel>
                                <!--<Image Height="130" Width="100"/>-->
                                <!--Imagem-->
                                <RelativePanel>
                                    <TextBlock Text="" RequestedTheme="Light" FontSize="22" FontWeight="SemiBold" />
                                </RelativePanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </RelativePanel>
            <RelativePanel Grid.Row="1" Width="auto" Height="auto" Margin="30">
                <Rectangle Fill="#FFF0F0F0"
                           Width="auto" Height="auto"
                           RelativePanel.AlignLeftWithPanel="True"
                           RelativePanel.AlignRightWithPanel="True"
                           RelativePanel.AlignTopWithPanel="True"
                           RelativePanel.AlignBottomWithPanel="True"
                           RadiusX="45"
                           RadiusY="45"/>
                <Image x:ConnectionId='23' x:Name="img" 
                       Source="/Assets/Pikachu-com-Fundo-Transparente-1024x919.png" 
                       MaxHeight="330" 
                       RelativePanel.AlignHorizontalCenterWithPanel="True" 
                       MaxWidth="320" 
                       Height="auto"
                       Width="auto"
                       Canvas.ZIndex="2"
                       Margin="20,50,0,0"
                       />
                <Image x:ConnectionId='24' x:Name="basePokemon" 
                       Source="/Assets/—Pngtree—product presentation podium_6281635_cut.png" 
                       Height="auto" Width="auto"
                       Stretch="Uniform"
                       MinWidth="250"
                       MaxWidth="450" 
                       Margin="0,-20,0,0"
                       RelativePanel.Below="img"
                       RelativePanel.AlignVerticalCenterWithPanel="False"
                       RelativePanel.AlignHorizontalCenterWithPanel="True"/>
                <!--imagem de um pedestal-->

                <!--<a href='https://br.freepik.com/fotos-vetores-gratis/circulo'>Círculo vetor criado por vectorpocket - br.freepik.com</a>-->
                
            </RelativePanel>

            <RelativePanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1" Canvas.ZIndex="3" >
                <Rectangle x:ConnectionId='3' x:Name="whiteBack"
                           MinWidth="500" 
                           MinHeight="350" 
                           Height="auto" 
                           Fill="White" 
                           Margin="30,30,30,30" 
                           RelativePanel.AlignTopWithPanel="True"
                           RelativePanel.AlignBottomWithPanel="True"
                           RelativePanel.AlignLeftWithPanel="True"
                           RelativePanel.AlignRightWithPanel="True"
                           RadiusX="45" RadiusY="45"/>
                <StackPanel Orientation="Vertical"  
                            Width="auto" 
                            RelativePanel.AlignTopWith="whiteBack"
                            RelativePanel.AlignLeftWith="whiteBack"
                            RelativePanel.AlignHorizontalCenterWith="whiteBack" 
                            Margin="70,60,0,30">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                        <TextBlock x:ConnectionId='21' x:Name="Nome" 
                                   Text="Nome:" 
                                   Style="{StaticResource MyTextBlocks}"/>
                        <TextBlock x:ConnectionId='22' x:Name="namePokemon"
                                   Style="{StaticResource MyTextBlocks}"
                                   RelativePanel.AlignLeftWith="Nome" 
                                   Margin="10,0,0,0" 
                                   />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:ConnectionId='19' x:Name="Type"
                                   Text="Espécie:" 
                                   Style="{StaticResource MyTextBlocks}"
                                   />
                        <TextBlock x:ConnectionId='20' x:Name="typePokemon" 
                                   RelativePanel.AlignLeftWith="Nome"
                                   Style="{StaticResource MyTextBlocks}"                                   
                                   Margin="10,0,0,0" 
                                   />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:ConnectionId='17' x:Name="Weight" 
                                   Text="Peso: " 
                                   Style="{StaticResource MyTextBlocks}"
                                   />
                        <TextBlock x:ConnectionId='18' x:Name="PesoPokemon" 
                                   Text="" 
                                   Style="{StaticResource MyTextBlocks}"
                                   RelativePanel.AlignLeftWith="Especie" 
                                   Margin="10,0,0,0" 
                                   />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:ConnectionId='15' x:Name="Height"
                                   Text="Altura: "
                                   Style="{StaticResource MyTextBlocks}"
                                   />
                        <TextBlock x:ConnectionId='16' x:Name="AltPokemon" 
                                   Text="" 
                                   Style="{StaticResource MyTextBlocks}"
                                   RelativePanel.AlignLeftWith="Especie" 
                                   Margin="10,0,0,0" 
                                   />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:ConnectionId='13' x:Name="Speed"
                                   Text="Velocidade: "
                                   Style="{StaticResource MyTextBlocks}"
                                   />
                        <TextBlock x:ConnectionId='14' x:Name="SpeedPokemon" 
                                   Text="" 
                                   Style="{StaticResource MyTextBlocks}"
                                   RelativePanel.AlignLeftWith="Especie" 
                                   Margin="10,0,0,0" 
                                   />
                    </StackPanel>
                    <TextBlock Text="Estatísticas de Batalha: "
                               Style="{StaticResource MyTextBlocks}"
                               />

                    <Grid Margin="50,10,20,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Ataque: " 
                                   Grid.Row="2"
                                   FontSize="18" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" 
                                   RequestedTheme="Light"/>
                        <ProgressBar x:ConnectionId='8' x:Name="AtaqueBarra"
                                     Grid.Row="2"
                                         Grid.Column="1"
                                         Margin="10,5,0,5" 
                                         Width="200"
                                         Height="30"
                                         Maximum="100"
                                         Value="50"
                                         Foreground="GreenYellow"
                                         Style="{StaticResource MyProgressBar}"
                                         />

                        <TextBlock Grid.Row="0" Text="HP: " FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" RequestedTheme="Light"/>
                        <ProgressBar x:ConnectionId='9' x:Name="HpBarra" 
                                         Grid.Row="0"
                                         Grid.Column="01"
                                         Margin="10,5,0,5" 
                                         Width="200"
                                         Height="30"
                                         Maximum="100"
                                         Foreground="Red"
                                         Style="{StaticResource MyProgressBar}"
                                         />

                        <TextBlock Grid.Row="1" Text="Defesa: " FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" RequestedTheme="Light"/>
                        <ProgressBar x:ConnectionId='10' x:Name="DefesaBarra" 
                                         Grid.Row="1"
                                         Grid.Column="01"
                                         Margin="10,5,0,5" 
                                         Width="200"
                                         Height="30"
                                         Maximum="100"
                                         Value="75"
                                         Foreground="Purple"
                                         Style="{StaticResource MyProgressBar}"
                                         />
                        <TextBlock Grid.Row="3" Text="Ataque Especial: " FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" RequestedTheme="Light"/>
                        <ProgressBar x:ConnectionId='11' x:Name="SpAtkBarra" 
                                         Grid.Row="3"
                                         Grid.Column="01"
                                         Margin="10,5,0,5" 
                                         Width="200"
                                         Height="30"
                                         Maximum="100"
                                         Value="75"
                                         Foreground="ForestGreen"
                                         Style="{StaticResource MyProgressBar}"
                                         />
                        <TextBlock Grid.Row="4" Text="Defesa Especial: " FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" RequestedTheme="Light"/>
                        <ProgressBar x:ConnectionId='12' x:Name="SpDefBarra" 
                                         Grid.Row="4"
                                         Grid.Column="01"
                                         Margin="10,5,0,5" 
                                         Width="200"
                                         Height="30"
                                         Maximum="100"
                                         Value="65"
                                         Foreground="Blue"
                                         Style="{StaticResource MyProgressBar}"
                                         />
                    </Grid>
                    <StackPanel Orientation="Horizontal" Margin="20,10,0,0" HorizontalAlignment="Right">
                        <Button x:ConnectionId='4' x:Name="Delete" Content="Apagar" Margin="0,0,10,0" RequestedTheme="Light">
                            <Button.Flyout>
                                <Flyout x:ConnectionId='5' x:Name="DeleteConfirm">
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="Você tem certeza que deseja apagar este Pokémon da Base de dados?" Margin="20"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button x:ConnectionId='6' x:Name="Delete_Y" Content="Sim"                     />
                                            <Button x:ConnectionId='7' x:Name="Delete_N" Content="Não"                       />
                                        </StackPanel>
                                    </StackPanel>
                                </Flyout>
                            </Button.Flyout>
                        </Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="20,10,0,0">
                    </StackPanel>
                </StackPanel>
            </RelativePanel>
        </Grid>
    </Frame>
</Page>

