                        <Button x:ConnectionId='11' x:Name="PreviousPokemon"
                                FontFamily="Segoe MDL2 Assets" 
                                Content="&#xE00E;" 
                                RelativePanel.AlignHorizontalCenterWithPanel="True"  
                                RelativePanel.LeftOf="NextPokemon" 
                                Margin="0,10,6,5"
                                MinHeight="40"
                                MinWidth="40" 
                                                              RequestedTheme="Light"/>
                        <Button x:ConnectionId='12' x:Name="NextPokemon" 
                                FontFamily="Segoe MDL2 Assets" 
                                Content="&#xE00f;"
                                HorizontalAlignment="Right"
                                Margin="0,10,0,5" 
                                MinHeight="40" 
                                MinWidth="40" 
                                                          RequestedTheme="Light"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="1" Margin="10,20,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:ConnectionId='8' Name="Nome" Text="Nome:" FontSize="24" Foreground="Black"/>
                        <TextBlock x:ConnectionId='9' x:Name="namePokemon" Text="Nome aqui" FontSize="24" RelativePanel.AlignLeftWith="Nome" Margin="10,0,0,0" Foreground="Black"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:ConnectionId='6' x:Name="Ataque" Text="Ataque:" FontSize="24" Foreground="Black"/>
                        <TextBlock x:ConnectionId='7' x:Name="atkPokemon" Text="Nome do ataque aqui" FontSize="24" RelativePanel.AlignLeftWith="Nome" Margin="10,0,0,0" Foreground="Black"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:ConnectionId='4' x:Name="Especie" Text="Espécie: " FontSize="24" Foreground="Black" TextWrapping="Wrap"/>
                        <TextBlock x:ConnectionId='5' x:Name="EspeciePokemon" Text="Nome da espécie aqui" FontSize="24" RelativePanel.AlignLeftWith="Especie" Margin="10,0,0,0" Foreground="Black"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
