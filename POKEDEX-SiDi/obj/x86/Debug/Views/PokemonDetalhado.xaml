                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <Rectangle Fill="DarkGray" Height="130" Width="100"/>
                                    <TextBlock Text="{Binding}" RequestedTheme="Light" />
                                </StackPanel>
