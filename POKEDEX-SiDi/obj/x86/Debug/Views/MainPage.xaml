                        <TextBlock x:ConnectionId='17' x:Name="PageName" Text="Lista dos Pokémons" FontSize="20" Foreground="Black" RelativePanel.AlignHorizontalCenterWithPanel="True" Margin="10"/>
                        <TextBlock x:ConnectionId='18' x:Name="TextOrganizar" Text="Organizar por: " Foreground="Black" RelativePanel.LeftOf="Organizacao" Margin="5" RelativePanel.AlignVerticalCenterWithPanel="True"/>
                        <ComboBox x:ConnectionId='19' x:Name="Organizacao" UseLayoutRounding="True"                                                 RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" Margin="0,0,5,0">
                            <ComboBoxItem Content="Número" IsSelected="True"/>
                            <ComboBoxItem Content="Nome"/>
                            <ComboBoxItem Content="Tipo"/>
