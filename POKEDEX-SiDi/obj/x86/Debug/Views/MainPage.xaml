                    <RelativePanel x:ConnectionId='4' x:Name="singlePokemon">

                        <!--Lista que puxa do BD os primeiros pokémons-->

                        <!--Cada campo deste será um pokémon exibido na lista-->
                        <StackPanel x:ConnectionId='5' x:Name="List_pokemon" Orientation="Horizontal" Height="150" Margin="0,0,0,10" MinWidth="1400" Background="LightGoldenrodYellow"                                                                    >
                            <!--<StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
