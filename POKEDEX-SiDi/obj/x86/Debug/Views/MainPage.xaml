                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>-->
                            <RelativePanel x:ConnectionId='7' x:Name="ItemListPokemon">
                                <!--imagem do pokemon-->
                                <Image x:ConnectionId='8' x:Name="photo" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" Margin="15,0,10,0" Height="140" Width="140" FocusVisualPrimaryBrush="Black" FocusVisualSecondaryBrush="Black"/>
                                <StackPanel x:ConnectionId='9' x:Name="Details" Orientation="Vertical" MinWidth="1250" RelativePanel.RightOf="photo">
                                    <!--Texto com informações do pokémon-->
                                    <TextBlock x:ConnectionId='10' x:Name="Nome" Margin="10,10,0,0" TextWrapping="Wrap" Height="37" Foreground="Black" FocusVisualPrimaryBrush="Black" FontSize="20" SelectionHighlightColor="Black"><Run Text="Nome do Pokémon aqui!"/></TextBlock>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock x:ConnectionId='15' x:Name="TipoPokemon" Foreground="Black" FontSize="14" Margin="20,0,5,0" Text="Tipo do Pokemon: "/>
                                        <!--Print/return tipo pokemon-->
                                        <TextBlock x:ConnectionId='16' x:Name="TipoPokemonOut" Foreground="Black" TextWrapping="Wrap" MinWidth="50" Text="teste"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock x:ConnectionId='13' x:Name="AtkPokemon" Foreground="Black" FontSize="14" Margin="20,0,5,0" Text="Ataque: "/>
                                        <!--Print/return ataque pokemon-->
                                        <TextBlock x:ConnectionId='14' x:Name="AtkPokemonOut" Foreground="Black" TextWrapping="Wrap" Text="teste"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock x:ConnectionId='11' x:Name="Habilidades" Foreground="Black" FontSize="14" Margin="20,0,5,0" Text="Habilidades: "/>
                                        <!--Print/return habilidades do pokemon-->
                                        <TextBlock x:ConnectionId='12' x:Name="HabilidadesOut" Foreground="Black" TextWrapping="Wrap" Text="teste"/>
                                    </StackPanel>


                                </StackPanel>
                            </RelativePanel>
                            <!--<RelativePanel>
                                <StackPanel x:Name="Details" Orientation="Vertical" MinWidth="1150" RelativePanel.AlignRightWithPanel="True"> o termo correto era RightOf
