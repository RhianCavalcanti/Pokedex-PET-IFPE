        <StackPanel x:Name="PokemonDetalhes" Background="White" MinWidth="1400" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignBottomWithPanel="True">

            <StackPanel x:Name="Pokelist" Orientation="Vertical" MinWidth="800" MaxWidth="800">
                <!--Aqui talvez seja um relative panel e dentro este stack-->
                <RelativePanel>
                    <Button Content="Home" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click"/>
                    <!--Imagem do pokémon aqui-->
                    <Rectangle x:Name="imgPokemon" Fill="#7F000000" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" Height="530" Width="520"/>

                </RelativePanel>
                <StackPanel Orientation="Horizontal" Width="1000">
                    <TextBlock Name="Nome" Text="Nome:" FontSize="24" Foreground="Black"/>
                    <TextBlock x:Name="namePokemon" Text="Nome aqui" FontSize="24" RelativePanel.AlignLeftWith="Nome" Margin="10,0,0,0" Foreground="Black"/>
                    <!--<RelativePanel>
                        </RelativePanel>-->
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="Ataque" Text="Ataque:" FontSize="24" Foreground="Black"/>
                    <TextBlock x:Name="atkPokemon" Text="Nome do ataque aqui" FontSize="24" RelativePanel.AlignLeftWith="Nome" Margin="10,0,0,0" Foreground="Black"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="Especie" Text="Espécie: " FontSize="24" Foreground="Black" TextWrapping="Wrap"/>
                    <TextBlock x:Name="EspeciePokemon" Text="Nome da espécie aqui" FontSize="24" RelativePanel.AlignLeftWith="Especie" Margin="10,0,0,0" Foreground="Black"/>
                </StackPanel>
            </StackPanel>
