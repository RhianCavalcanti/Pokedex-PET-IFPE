        <Grid x:Name="Pokelist" Background="#FF73DE73">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="2*" MinHeight="700"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="300"/>
                <ColumnDefinition Width="2*" MinWidth="400"/>
                <!--<ColumnDefinition Width="2*" MinWidth="200"/>-->
            </Grid.ColumnDefinitions>
            <!--Aqui talvez seja um relative panel e dentro este stack-->
            <Button Content="&#xF0D6;"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="20"
                    Height="50"
                    Width="50"
                    Grid.Column="2"
                    HorizontalAlignment="Right" 
                    Canvas.ZIndex="3"
                    Click="NextTenPokemon_Click"
                        />
            <RelativePanel Grid.ColumnSpan="3" Background="LightYellow">
                <Button Content="&#xF0D5;"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="20"
                        Height="50"
                        Width="50"
                        RelativePanel.AlignVerticalCenterWithPanel="True" 
                        Canvas.ZIndex="3"
                        Click="PreviousTenPokemon_Click"
                        />
                
                <!--<Button Content="Home" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click" RequestedTheme="Light"/>-->
                <!--Imagem do pokémon aqui-->

                <!--<Image />-->
                <ListView x:Name="ListaPokemonsD" 
                              SelectionMode="Single" 
                          SelectedIndex="0"
                              ItemsSource="{x:Bind listaParaATela, Mode=OneWay}"
                              IsItemClickEnabled="True"
                              ItemClick="ListaPokemonsD_ItemClick"
                              ScrollViewer.HorizontalScrollMode="Enabled"
                              ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                              ScrollViewer.IsHorizontalRailEnabled="True"
                              ScrollViewer.VerticalScrollMode="Disabled"
                              Margin="0,10,0,10"
                              >
                    <!--IncrementalLoadingTrigger="Edge"
                              IncrementalLoadingThreshold="10">-->
                    <!--Estes 2 últimos é para ativar o lazy loading e criar mais 10 itens-->

                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" Height="200" Margin="40,0,0,0"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="data:PokemonDb">
                            <StackPanel x:Name="ItemList" Orientation="Vertical">
                                <!--PointerEntered="StackPanel_PointerEntered"-->
                                            
                                <RelativePanel>
                                    <Rectangle Fill="DarkGray" Height="160" Width="160"/>
                                </RelativePanel>
                                <!--<Image Height="130" Width="100"/>-->
                                <!--Imagem-->
                                <RelativePanel>
                                    <TextBlock Text="{x:Bind Name}" RequestedTheme="Light" FontSize="22" FontWeight="SemiBold" />
                                </RelativePanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!--<ListView x:Name="lvwMovieWatchlist" Grid.Row="1" Margin="0,5,0,3" ItemsSource="MovieViewModel"
                          ScrollViewer.HorizontalScrollMode="Enabled"
                          ScrollViewer.HorizontalScrollBarVisibility="Visible"
                          ScrollViewer.IsHorizontalRailEnabled="True"
                          ScrollViewer.VerticalScrollMode="Disabled" RequestedTheme="Light">

                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Height="250" />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ListViewItem Margin="0,0,5,0" Tag="{Binding ID}">
                                    <Image Source="{Binding FormattedPosterUri}" Width="92" />
                                </ListViewItem>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView> -->
            </RelativePanel>
            <!--<Image x:Name="imgPokemon" Grid.Row="1" Source="/Assets/4099.jpg" Height="301" Width="350" />-->

            <RelativePanel Grid.Row="1" Width="auto" Height="auto" Margin="30">
                <Rectangle Fill="#FFF0F0F0"
                           Width="auto" Height="auto"
                           RelativePanel.AlignLeftWithPanel="True"
                           RelativePanel.AlignRightWithPanel="True"
                           RelativePanel.AlignTopWithPanel="True"
                           RelativePanel.AlignBottomWithPanel="True"
                           RadiusX="45"
                           RadiusY="45"/>
                <Image x:Name="img" 
                       Source="/Assets/Pikachu-com-Fundo-Transparente-1024x919.png" 
                       MaxHeight="330" 
                       RelativePanel.AlignHorizontalCenterWithPanel="True" 
                       MaxWidth="320" 
                       Height="auto"
                       Width="auto"
                       Canvas.ZIndex="2"
                       Margin="20,50,0,0"
                       />
                <Image x:Name="basePokemon" 
                       Source="/Assets/—Pngtree—product presentation podium_6281635_cut.png" 
                       Height="auto" Width="auto"
                       Stretch="Uniform"
                       MinWidth="250"
                       MaxWidth="450" 
                       Margin="0,-20,0,0"
                       RelativePanel.Below="img"
                       RelativePanel.AlignVerticalCenterWithPanel="False"
                       RelativePanel.AlignHorizontalCenterWithPanel="True"/>
                <!--imagem de um pedestal-->
                
                <!--<a href='https://br.freepik.com/fotos-vetores-gratis/circulo'>Círculo vetor criado por vectorpocket - br.freepik.com</a>-->
                <StackPanel Orientation="Horizontal" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="basePokemon" Margin="20">
                    <Button x:Name="PreviousPokemonImg"
                            FontFamily="Segoe MDL2 Assets" 
                            Content="&#xE00E;" 
                            RelativePanel.AlignHorizontalCenterWithPanel="True"  
                            RelativePanel.LeftOf="NextPokemon" 
                            Margin="0,10,6,5"
                            MinHeight="40" MinWidth="40" 
                            Height="50" Width="50"
                            Click="PreviousPokemonImg_Click" RequestedTheme="Light" CornerRadius="15,15,15,15"/>
                    <Button x:Name="NextPokemonImg" 
                            FontFamily="Segoe MDL2 Assets" 
                            Content="&#xE00f;"
                            HorizontalAlignment="Right"
                            Margin="0,10,0,5" 
                            MinHeight="40" MinWidth="40" 
                            Height="50" Width="50"
                            Click="NextPokemonImg_Click" RequestedTheme="Light" CornerRadius="15,15,15,15"/>
                </StackPanel>
            </RelativePanel>

            <RelativePanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1" Canvas.ZIndex="3" >
                <Rectangle x:Name="whiteBack"
                           MinWidth="500" 
                           MinHeight="350" 
                           Height="auto" 
                           Fill="White" 
                           Margin="30,30,30,30" 
                           RelativePanel.AlignTopWithPanel="True"
                           RelativePanel.AlignBottomWithPanel="True"
                           RelativePanel.AlignLeftWithPanel="True"
                           RelativePanel.AlignRightWithPanel="True"
                           RadiusX="45" RadiusY="45"/>
                <StackPanel Orientation="Vertical"  
                            Width="auto" 
                            RelativePanel.AlignTopWith="whiteBack"
                            RelativePanel.AlignLeftWith="whiteBack"
                            RelativePanel.AlignHorizontalCenterWith="whiteBack" 
                            Margin="70,60,0,30">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                        <TextBlock x:Name="Nome" 
                                   Text="Nome:" 
                                   Style="{StaticResource MyTextBlocks}"/>
                        <TextBlock x:Name="namePokemon"
                                   Text="{x:Bind pokeSelected.Name}" 
                                   Style="{StaticResource MyTextBlocks}"
                                   RelativePanel.AlignLeftWith="Nome" 
                                   Margin="10,0,0,0" 
                                   />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="Type"
                                   Text="Espécie:" 
                                   Style="{StaticResource MyTextBlocks}"
                                   />
                        <TextBlock x:Name="typePokemon" 
                                   RelativePanel.AlignLeftWith="Nome"
                                   Style="{StaticResource MyTextBlocks}"                                   
                                   Margin="10,0,0,0" 
                                   />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="Weight" 
                                   Text="Peso: " 
                                   Style="{StaticResource MyTextBlocks}"
                                   />
                        <TextBlock x:Name="PesoPokemon" 
                                   Text="" 
                                   Style="{StaticResource MyTextBlocks}"
                                   RelativePanel.AlignLeftWith="Especie" 
                                   Margin="10,0,0,0" 
                                   />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="Height"
                                   Text="Altura: "
                                   Style="{StaticResource MyTextBlocks}"
                                   />
                        <TextBlock x:Name="AltPokemon" 
                                   Text="" 
                                   Style="{StaticResource MyTextBlocks}"
                                   RelativePanel.AlignLeftWith="Especie" 
                                   Margin="10,0,0,0" 
                                   />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="Speed"
                                   Text="Velocidade: "
                                   Style="{StaticResource MyTextBlocks}"
                                   />
                        <TextBlock x:Name="SpeedPokemon" 
                                   Text="" 
                                   Style="{StaticResource MyTextBlocks}"
                                   RelativePanel.AlignLeftWith="Especie" 
                                   Margin="10,0,0,0" 
                                   />
                    </StackPanel>
                    <TextBlock Text="Estatísticas de Batalha: "
                               Style="{StaticResource MyTextBlocks}"
                               />
                    
                    <Grid Margin="50,10,20,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Ataque: " 
                                   Grid.Row="2"
                                   FontSize="18" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" 
                                   RequestedTheme="Light"/>
                        <ProgressBar x:Name="AtaqueBarra"
                                     Grid.Row="2"
                                         Grid.Column="1"
                                         Margin="10,5,0,5" 
                                         Width="200"
                                         Height="30"
                                         Maximum="300"
                                     Value="150"
                                         Foreground="GreenYellow"
                                         Style="{StaticResource MyProgressBar}"
                                         />

                        <TextBlock Grid.Row="0" Text="HP: " FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" RequestedTheme="Light"/>
                        <ProgressBar x:Name="HpBarra" 
                                         Grid.Row="0"
                                         Grid.Column="01"
                                         Margin="10,5,0,5" 
                                         Width="200"
                                         Height="30"
                                         Maximum="300"
                                         Foreground="Red"
                                         Style="{StaticResource MyProgressBar}"
                                         />

                        <TextBlock Grid.Row="1" Text="Defesa: " FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" RequestedTheme="Light"/>
                        <ProgressBar x:Name="DefesaBarra" 
                                         Grid.Row="1"
                                         Grid.Column="01"
                                         Margin="10,5,0,5" 
                                         Width="200"
                                         Height="30"
                                         Maximum="300"
                                         Value="225"
                                         Foreground="Purple"
                                         Style="{StaticResource MyProgressBar}"
                                         />
                        <TextBlock Grid.Row="3" Text="Ataque Especial: " FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" RequestedTheme="Light"/>
                        <ProgressBar x:Name="SpAtkBarra" 
                                         Grid.Row="3"
                                         Grid.Column="01"
                                         Margin="10,5,0,5" 
                                         Width="200"
                                         Height="30"
                                         Maximum="300"
                                         Value="175"
                                         Foreground="ForestGreen"
                                         Style="{StaticResource MyProgressBar}"
                                         />
                        <TextBlock Grid.Row="4" Text="Defesa Especial: " FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" RequestedTheme="Light"/>
                        <ProgressBar x:Name="SpDefBarra" 
                                         Grid.Row="4"
                                         Grid.Column="01"
                                         Margin="10,5,0,5" 
                                         Width="200"
                                         Height="30"
                                         Maximum="300"
                                         Value="175"
                                         Foreground="Blue"
                                         Style="{StaticResource MyProgressBar}"
                                         />
                    </Grid>
                    <StackPanel Orientation="Horizontal" Margin="20,10,0,0" HorizontalAlignment="Right">
                        <Button x:Name="Edit" Content="Editar" Click="Edit_Click"/>
                        <Button x:Name="Delete" Content="Apagar" Margin="10,0,0,0">
                            <Button.Flyout>
                                <Flyout x:Name="DeleteConfirm">
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="Você tem certeza que deseja apagar este Pokémon da Base de dados?" Margin="20"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button x:Name="Delete_Y" Content="Sim" Click="Delete_Click"/>
                                            <Button x:Name="Delete_N" Content="Não" Click="Delete_N_Click"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Flyout>
                            </Button.Flyout>
                        </Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="20,10,0,0">

                    </StackPanel>
                </StackPanel>
            </RelativePanel>
            <!--<RelativePanel Grid.Row="1" Grid.Column="2">
                <Rectangle x:Name="whiteBackTwo"
                           MinWidth="500" 
                           MinHeight="350" 
                           Height="auto" 
                           Fill="White" 
                           Margin="-120,30,20,30" 
                           RelativePanel.AlignTopWithPanel="True"
                           RelativePanel.AlignBottomWithPanel="True"
                           RelativePanel.AlignLeftWithPanel="True"
                           RelativePanel.AlignRightWithPanel="True"
                           RadiusX="45" RadiusY="45"/>
                <StackPanel Orientation="Vertical" RelativePanel.AlignTopWith="whiteBackTwo" Margin="50">
                    --><!--<TextBlock Text="olar tudo bem"/>--><!--
                </StackPanel>
            </RelativePanel>-->
        </Grid>
    </Frame>
</Page>
